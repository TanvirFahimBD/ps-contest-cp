#include<stdio.h>
int main()
{
    double a, b, c, area, perimeter;
    scanf("%lf %lf %lf", &a, &b, &c);
        perimeter = a+b+c;
        area = ((a+b)/2)*c;
    if((float)a+b>c && (float)b+c>a && (float)c+a>b){
            printf("Perimetro = %.1lf\n",perimeter);
    }

    else{
            printf("Area = %.1lf\n",area);

    }
    return 0;
}
