#include<iostream>
#include<bits/stdc++.h>
using namespace std;

int main()
{
    while(1){
        int n;
        cin >> n;
        if(n==0)break;
        int arr[n][n];

            for(int i=0; i<n; i++){
                r = i+1;
                for(int j=0; j<=i; j++, r--){
                    arr[i][j] = r;
                }
            }

        for(int i=0; i<n; i++){
            for(int j=0; j<n; j++){
                if(j==0) printf("%3d",arr[i][j]);
                else printf(" %3d",arr[i][j]);
             }
             cout << endl;
        }
             cout << endl;
    }

    return 0;
}

